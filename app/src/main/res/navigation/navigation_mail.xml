<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_mail"
    app:startDestination="@id/mailListFragment">

    <fragment
        android:id="@+id/mailListFragment"
        android:name="com.example.helloworld.features.mail.ui.MailListFragment"
        android:label="MailListFragment"
        tools:layout="@layout/fragment_mail_list" >
        <action
            android:id="@+id/action_mailListFragment_to_detailMailFragment"
            app:destination="@id/detailMailFragment" />
        <action
            android:id="@+id/action_mailListFragment_to_writeEmailFragment"
            app:destination="@id/writeEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailMailFragment"
        android:name="com.example.helloworld.features.mail.ui.DetailMailFragment"
        android:label="fragment_detail_mail"
        tools:layout="@layout/fragment_detail_mail" >
        <action
            android:id="@+id/action_detailMailFragment_to_writeEmailFragment"
            app:destination="@id/writeEmailFragment" />
        <argument
            android:name="Mail"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/writeEmailFragment"
        android:name="com.example.helloworld.features.mail.ui.WriteEmailFragment"
        android:label="fragment_write_email"
        tools:layout="@layout/fragment_write_email" />

</navigation>
